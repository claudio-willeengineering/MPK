<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    android:background="@color/white"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/mpk_illus3"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/aboutBody"
            style="@style/contentBodyText"
            android:layout_height="wrap_content"
            android:text="@string/first_fragment_science_permission"
            android:textSize="12sp"
            />

        <EditText
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/emailBox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextborder"
            android:hint="@string/textbox_hint_email"
            android:inputType="textEmailAddress"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/grantBeaconPermission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_yes"
                android:layout_alignParentLeft="true"
                android:background="@color/torquious_dark"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/denyBeaconPermission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_no"
                android:layout_alignParentRight="true"
                android:background="@color/torquious_dark"
                android:textColor="@color/white"/>

        </RelativeLayout>

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/aboutBody2"
        style="@style/contentBodyText"
        android:layout_height="wrap_content"
        android:text="@string/first_fragment_science_permission_2"
        android:textColor="@color/torquious_dark"
        />

    </LinearLayout>
</ScrollView>
