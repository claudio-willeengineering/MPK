<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/titleTextBox"
        style="@style/titleTextStyle"
        android:text="@string/firstscreen_permissions_title"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:layout_below="@id/titleTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:padding="12dp"
            >

            <TextView
                android:id="@+id/aboutBody"
                style="@style/contentBodyText"
                android:lineSpacingExtra="2sp"
                android:textSize="12sp"
                android:text="@string/placeholder2"
                />

            <TextView
                android:layout_marginTop="30dp"
                style="@style/contentBodyText"
                android:lineSpacingExtra="2sp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="@string/placeholder2"
                />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_marginTop="30dp"
                style="@style/contentBodyText"
                android:lineSpacingExtra="2sp"
                android:textSize="12sp"
                android:text="@string/placeholder2"
                android:layout_height="wrap_content"
                />

            <Spinner
                android:layout_marginTop="10dp"
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/placeholder"
                android:scaleType="fitCenter"
                />


            <Button
                android:id="@+id/finishButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit and Finish"
                android:layout_alignParentRight="true"
                />

        </LinearLayout>




    </ScrollView>




</RelativeLayout>
